{
  "name": "markdown-publisher-toolkit",
  "version": "0.0.0",
  "description": "Another small utility to simplify my life. Simply uses Forem's API to download a specific blog from dev and converts it to simplified HTML compatable with Coder Legion. ðŸ˜Ž",
  "keywords": [
    "devto",
    "blog",
    "utility",
    "remark",
    "markdown",
    "html",
    "coderlegion",
    "forem",
    "devtools",
    "checkmark",
    "markdown-publisher-toolkit"
  ],
  "license": "Apache-2.0",
  "author": "Ashley Childress",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w frontend\" \"npm run dev -w backend\"",
    "build": "npm run build -w frontend && npm run build -w backend",
    "preview": "npm run preview -w frontend",
    "test": "npm run test -w backend && npm run test:integration -w frontend",
    "test:unit": "npm run test:unit -w backend",
    "test:unit:watch": "npm run test:unit:watch -w frontend",
    "test:unit:ui": "npm run test:unit:ui -w frontend",
    "test:coverage": "npm run test:coverage -w backend",
    "test:coverage:ui": "npm run test:coverage:ui -w frontend",
    "test:integration": "npm run test:integration -w frontend",
    "test:integration:backend": "npm run test:integration -w backend",
    "test:integration:ui": "npm run test:integration:ui -w frontend",
    "test:integration:headed": "npm run test:integration:headed -w frontend",
    "test:integration:debug": "npm run test:integration:debug -w frontend",
    "test:all": "npm run test:coverage -w backend && npm run test:integration -w frontend",
    "commitlint": "commitlint --edit",
    "format": "npm exec -- prettier --write . && npm run format:remark && npm run format:fix-admonitions",
    "format:remark": "npm exec -- remark . -o --quiet",
    "format:fix-admonitions": "node scripts/fix-github-admonitions.js",
    "lint": "eslint --fix --max-warnings=0 --no-warn-ignored .",
    "spellcheck": "npx cspell . --show-suggestions --gitignore",
    "spellcheck:commit": "npx cspell commit.tmp --show-suggestions --no-gitignore",
    "lint:md": "npm exec -- remark . --frail",
    "convert:demo": "node backend/src/convert.js examples/sample.md > examples/sample.html"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@cspell/eslint-plugin": "^8.14.4",
    "@eslint/js": "^9.12.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/hast": "^3.0.4",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.1.0",
    "cspell": "^8.19.4",
    "eslint": "^9.12.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.10.0",
    "jsdom": "^26.1.0",
    "lefthook": "^1.7.18",
    "msw": "^2.11.1",
    "prettier": "^3.3.3",
    "remark-cli": "^12.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
